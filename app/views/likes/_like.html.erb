<% if user_signed_in? && comment.liked_by?(current_user)%>
  <%=link_to "いいね済", comment_likes_path(comment.id),  data: { turbo_method: :delete }, class: "comment_likes" %>
<% else %>
  <%=link_to "いいねする", comment_likes_path(comment.id), data: { turbo_method: :post }, class: "comment_likes" %>
<% end %>